<div class="collection_grid">
    <% @collections.each do |collection| %>
        <div class="collection_container">
            <%= link_to collectionlink_path(collection), class: "ajaxLink", remote: :true do %>
                <div class="collection">
                    <%= image_tag collection.cover.url(:thumb) %>
                    <div class="overlay_collection">
                      <div class="overlay_content">
                        <h4><%= collection.title %></h4>
                        <span><%= collection.subtitle %></span>
                      </div>
                    </div>
                </div>
            <% end %>
            <% if user_signed_in? && current_user.role ==="admin" %>
                <div class="collection_links">
                    <%= link_to 'Edit', edit_collection_path(collection), :remote => true, class: "collection_edit" %>
                    <%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: "collection_delete" %>
                </div>
            <%end%>
        </div>
    <% end %>
    <% if user_signed_in? && current_user.role ==="admin" %>
        <div class="collection_new">
            <td colspan="8"><%= link_to 'New collection', new_collection_path, :remote => true %></td>
        </div>
    <%end%>        
</div>