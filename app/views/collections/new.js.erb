//Remover form de editar
$(".edit_collection").each(function(){
    if (!($(this).css('display') === 'none')){
        $(this).slideToggle('normal', function() { $(this).remove(); } );
        $(this).prev().delay(600).fadeIn();
    }
});
$('.collection_new').hide();
$(".collection_form").css("display", "none").html("<%= j (render 'form') %>").slideDown();
