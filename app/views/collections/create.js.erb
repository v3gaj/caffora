<% if @collection.errors.any? %>
  $('.collection_errors').html("<%= j (render 'errors') %>");
<% else %>
	$(".collection_table").html("<%= j (render 'table') %>");
	$(".collection_form").slideToggle();
	$(".notice").slideToggle().html("Collection created succesfully.").delay(2000).slideToggle();
<% end %>