<% if @content.errors.any? %>
  $('.content_errors').html("<%= j (render 'errors') %>");
<% else %>
	$(".content_clear").val('');
	$(".content_table").html("<%= j (render 'table') %>");
	$(".content_form").html("<p class='content_notice'>Content created succesfully.</p>");
	$(".content_notice").delay(3000).hide(0);
<% end %>