jQuery(document).on 'turbolinks:load', ->
  $('.scroller').slick({
  	autoplay: true, dots: false, pauseOnHover: false, pauseOnFocus: false
  })

  $('.center').slick({
	  centerMode: true,
	  centerPadding: '100px',
	  slidesToShow: 1,
	  autoplay: true,
	  responsive: [
	    {
	      breakpoint: 768,
	      settings: {
	        arrows: true,
	        centerMode: true,
	        centerPadding: '40px',
	        slidesToShow: 3
	      }
	    },
	    {
	      breakpoint: 480,
	      settings: {
	        arrows: false,
	        centerMode: true,
	        centerPadding: '40px',
	        slidesToShow: 1
	      }
	    }
	  ]
	});